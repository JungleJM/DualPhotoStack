{
  "name": "dual-photo-stack",
  "version": "0.25.0",
  "description": "Dual Photo Stack - Coordinated Immich and PhotoPrism deployment tool",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "test": "jest"
  },
  "keywords": [
    "immich",
    "photoprism",
    "docker",
    "photo-management",
    "self-hosted"
  ],
  "author": "DPS Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "electron-reload": "^1.5.0",
    "jest": "^29.0.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "sudo-prompt": "^9.2.1"
  },
  "build": {
    "appId": "com.dps.dual-photo-stack",
    "productName": "Dual Photo Stack",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "scripts/**/*",
      "docker-templates/**/*",
      "node_modules/**/*"
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "Utility",
      "description": "Coordinated photo management with Immich and PhotoPrism"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}